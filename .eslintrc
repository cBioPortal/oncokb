{
    "extends": "google",
    "env": {
        "node": true,
        "browser": true,
        "es6": false,
        "jquery": true,
        "mocha": false
    },
    "globals": {
        "angular": 1
    },
    "rules": {
        "max-len": 0,
        "quotes": [
            2,
            "single"
        ],
        "indent": [
            2,
            4
        ],
        "no-warning-comments": [
            1,
            {
                "terms": [
                    "fixme"
                ],
                "location": "start"
            }
        ],
        "no-loop-func": 1
    }
}
